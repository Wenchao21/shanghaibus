    orientation: "vertical"
    BoxLayout:
        size_hint_y: None
        height: "40dp"
        ColorLabel:
            id: watched_station_title_label
    Widget:
        size_hint_y: None
        height: "1dp"
    BoxLayout:
        size_hint_y: None
        height: "60dp"
        ColorLabel:
            id: watched_station_info_label
    Widget:
        size_hint_y: None
        height: "1dp"
    BoxLayout:
    	bcolor: [105, 105, 105, 0.5]
	    canvas.before:
            Color:
                rgba: self.bcolor
            Rectangle:
                pos: self.pos
                size: self.size
        size_hint_y: None
        height: "30dp"
        Label:
            id: watched_offset_station_label
            size_hint_x: 10
        TextInput:
            id: watched_offset_station_textinput
            multiline: False
            size_hint_x: 8
            on_text: root.offset_station_input()
        Label:
            id: watched_offset_time_label
            size_hint_x: 10
        TextInput:
            id: watched_offset_time_textinput
            multiline: False
            size_hint_x: 8
        Label:
            id: check_option_label
            size_hint_x: 10
        CheckBox:
            id: check_option_checkbox
            size_hint_x: 3
            active: True
    Widget:
        size_hint_y: None
        height: "1dp"
    BoxLayout:
        size_hint_y: None
        height: "30dp"
        ColorLabel:
            id: watched_time_label
            size_hint_x: 10
        TextInput:
            id: start_hour_textinput
            size_hint_x: 8
            text: "00"
        ColorLabel:
            size_hint_x: 2
            text: ":"
        TextInput:
            id: start_min_textinput
            size_hint_x: 8
            text: "00"
        ColorLabel:
            size_hint_x: 4
            text: "-- --"
        TextInput:
            id: end_hour_textinput
            size_hint_x: 8
            text: "24"
        ColorLabel:
            size_hint_x: 2
            text: ":"
        TextInput:
            id: end_min_textinput
            size_hint_x: 8
            text: "00"
    Widget:
    Button:
        size_hint_y: None
        height: "40dp"
        id: delete_button
        on_press: root.delete_station()
    MenuButton:
